SELECT IL.NAME, I.SUMMARY
FROM ISSUES I
JOIN ISSUESLISTS IL ON IL.ID = I.ISSUESLIST_ID;

SELECT I.SUMMARY, U.ID, U.FIRSTNAME, U.LASTNAME
FROM USERSS U
JOIN ISSUES I ON U.ID = I.USER_ID_ASSIGNEDTO;

SELECT U.ID, U.FIRSTNAME, U.LASTNAME, COUNT(*) AS TASK_NUMBER
FROM USERSS U
JOIN ISSUES I ON U.ID = I.USER_ID_ASSIGNEDTO
GROUP BY I.USER_ID_ASSIGNEDTO;