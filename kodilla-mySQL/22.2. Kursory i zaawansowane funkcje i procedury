ALTER TABLE BOOKS ADD BESTSELLER BOOLEAN;



DROP FUNCTION IF EXISTS IsItBestseller;
DELIMITER $$
CREATE FUNCTION IsItBestseller(RENTALNUMBER INT) RETURNS BOOLEAN
BEGIN
    DECLARE result BOOLEAN DEFAULT FALSE;
    IF RENTALNUMBER > 2 THEN
        SET result = TRUE;
    ELSE SET result = FALSE;
    END IF;
    RETURN result;
END $$;
DELIMITER ;



DROP PROCEDURE IF EXISTS UpdateBestsellers;
DELIMITER $$
CREATE PROCEDURE UpdateBestsellers()
BEGIN
    DECLARE RENTALNUMBER, B_ID INT;
    DECLARE FINISHED INT DEFAULT 0;
    DECLARE ALL_BOOKS CURSOR FOR SELECT BOOK_ID FROM BOOKS;
    DECLARE CONTINUE HANDLER FOR NOT FOUND SET FINISHED = 1;

    OPEN ALL_BOOKS;
    WHILE (FINISHED = 0) DO
            FETCH ALL_BOOKS INTO B_ID;
            IF (FINISHED = 0) THEN
                SELECT COUNT(*) FROM RENTS
                WHERE BOOK_ID = B_ID
                INTO RENTALNUMBER;

                UPDATE BOOKS SET BESTSELLER = IsItBestseller(RENTALNUMBER)
                WHERE BOOK_ID = B_ID;
                COMMIT;
            END IF;
        END WHILE;

    CLOSE ALL_BOOKS;
END $$
DELIMITER ;

CALL UpdateBestsellers();